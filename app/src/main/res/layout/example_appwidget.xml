<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvAppWidget"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:text="FirstWidgetText"
        android:textSize="15sp"
        android:textColor="#FFFFFF"
        android:background="#000000"/>
    <ImageView
        android:id="@+id/ivChange"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/before"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <Button
        android:id="@+id/btnAppWidgetGetActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_getactivity"
        android:textAllCaps="false"/>
    <Button
        android:id="@+id/btnAppWidgetGetBroadcast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_getbroadcast"
        android:textAllCaps="false"/>
    </LinearLayout>
</LinearLayout>